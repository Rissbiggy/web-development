import React, { useState } from 'react'; 
import { View, Text, TouchableOpacity, StyleSheet, Alert } from 'reactï¿¾native'; 
const emergencyTypes = [ 
 { id: 1, name: 'Cardiac Arrest' }, 
 { id: 2, name: 'Car Accident' }, 
 { id: 3, name: 'Severe Bleeding' }, 
 { id: 4, name: 'Fire Accident' }, 
 { id: 5, name: 'Stroke' }, 
]; 
const EmergencySelector = () => { 
 const [selectedEmergency, setSelectedEmergency] = useState(null); 
 const handleEmergencySelect = (type) => { 
 setSelectedEmergency(type); 
 Alert.alert('Emergency Selected', `You selected: ${type.name}`); 
 // You can trigger an API call here to send the selected emergency type 
to the backend 
 }; 
 return ( 
 <View style={styles.container}> 
 <Text style={styles.title}>Select Type of Emergency</Text> 
 {emergencyTypes.map((type) => ( 
 <TouchableOpacity 
 key={type.id} 
 style={[ 
 styles.button, 
 selectedEmergency?.id === type.id && styles.selectedButton, 
 ]} 
 onPress={() => handleEmergencySelect(type)} 
 > 
 <Text style={styles.buttonText}>{type.name}</Text> 
 </TouchableOpacity> 
 ))} 
 </View> 
 ); 
}; 
const styles = StyleSheet.create({ 
 container: { 
 flex: 1, 
 justifyContent: 'center', 
 alignItems: 'center', 
 padding: 20, 
 }, 
 title: { 
 fontSize: 24, 
 fontWeight: 'bold', 
 marginBottom: 20, 
 }, 
 button: { 
 backgroundColor: '#4CAF50', 
 paddingVertical: 15, 
 paddingHorizontal: 40, 
 borderRadius: 10, 
 marginVertical: 10, 
 }, 
 selectedButton: { 
 backgroundColor: '#008CBA', 
 }, 
 buttonText: { 
 color: '#fff', 
 fontSize: 18, 
 }, 
}); 
export default EmergencySelector;
